<nav class="navbar">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "Access Point", root_path, class: "navbar-brand in-block-link" %>
    </div>

    <div>
      <ul class="nav navbar-nav">
        <% if signed_in_user %>
          <li class="active">
            <a href="<%= providers_path %>">Providers <span class="sr-only">(current)</span></a>
          </li>
          <li><a href="<%= appointments_path %>">Appointments</a></li>
          <li><a href="<%= user_path(current_user) %>">My Profile</a></li>

        <% elsif signed_in_provider %>
          <li><a href="<%= appointments_path %>">My Appointments</a></li>
          <li><a href="<%= provider_path(current_user) %>">My Profile</a></li>
        <% end %>

        <li><%= link_to "Resources", resources_path, class: "nav navbar-nav" %></li>
