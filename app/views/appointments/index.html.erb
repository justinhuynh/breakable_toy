<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <h1 style="text-align: center;">Appointments</h1>
      <br/>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <% @appointments.each do |a| %>
        <div class="card-block">
          <div class="appointments padded">
            <%= link_to "#{a.date.strftime("%a %B %d, %Y")} @ #{a.start_time.strftime("%I:%M%p")}", appointment_path(a) %>
            <% if signed_in_user %>
              (Appointment with
              <%= link_to a.provider.name, provider_path(a.provider) %> in
              <%= a.provider.city %>)

            <% elsif current_user == a.provider %>
              <% if a.booked? %>
                (booked by
                <%= link_to a.user.name,
                user_path(a.user) %>)
              <% else %>
                (not yet booked)
              <% end %>
            <% end %>
          </div>
        </div>
        <br/>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="center">
      <div class="col" style="text-align: center;">
        <div class="card-block">
          <div class="appointments padded">
            <% if signed_in_provider %>
              <%= link_to "Add an Appointment", new_appointment_path %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
